{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules/*",
    "aot/",
    "./main-aot.ts",
    "./vendor-aot.ts",
    "./main-server-aot.ts",
    "ssr/",
    "app/app.server.module.ts",
    "./express-engine.ts"
  ]
}